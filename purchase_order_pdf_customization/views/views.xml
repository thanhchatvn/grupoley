<odoo>
    <data>

        <template id="report_sale_order_inherit" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//t[@t-set='address']" position="replace">
                <t t-set='address'></t>
            </xpath>

            <xpath expr="//div[hasclass('page')]" position="before">
                <section class="addresses">
                    <div class="container text-center">
                        <div class="row">
                            <div class="col-6" style="font-size:12px;">
                                <div>
                                    <div>
                                        <span t-field="o.company_id.partner_id.name"/>,
                                    </div>
                                    <div>
                                        Col. <span t-field="o.company_id.partner_id.l10n_mx_edi_colony"/>,
                                    </div>
                                    <div>
                                        <span t-field="o.company_id.partner_id.street"/>,
                                    </div>
                                    <div>
                                        <span t-field="o.company_id.partner_id.city"/>, <span t-field="o.company_id.partner_id.state_id.name"/>, <span t-field="o.company_id.partner_id.zip"/>
                                    </div>
                                    <div t-if="o.company_id.partner_id.vat">
                                        <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label">R.F.C. </t>
                                        <t t-else="">Tax ID</t>: <span t-field="o.company_id.partner_id.vat"/></div>
                                    ORDEN DE COMPRA
                                </div>
                            </div>
                            <div class="col-6">
                                <div>ORDEN No. <span t-field="o.name"></span> </div>
                                <br/>
                                <div>
                                    STATUS: <t t-if="o.state == 'purchase'"><span>Aprobado</span></t>
                                    <t t-else=""><span t-field="o.state"></span></t>
                                </div>
                                <br/>
                                <div>FECHA: <span t-field="o.date_order">   </span> </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="customer">
                    <div class="container">
                        <div class="row" style="border-top: solid 1px; border-bottom: solid 1px;">
                            <div class="col-12" style="font-size:12px;">
                                <div>
                                    <div>
                                        PROVEEDOR: <span t-field="o.partner_id.name"/>
                                    </div>
                                    <div>
                                        DOMICILIO: <span t-field="o.partner_id.street"/>,
                                    </div>
                                    <div>
                                        Col. <span t-field="o.partner_id.l10n_mx_edi_colony"/>,
                                    </div>
                                    <div>
                                        LUGAR: <span t-field="o.partner_id.city"/>, <span t-field="o.partner_id.state_id.name"/> <span t-field="o.partner_id.zip"/>
                                    </div>
                                    <div>
                                        No. PROVEEDOR: <span t-field="o.partner_id.ref"/>
                                    </div>
                                    <div>
                                        R.F.C: <span t-field="o.partner_id.vat"></span>
                                    </div>
                                    <div class="row">
                                        <div class="col-3">TELEFONO: <span t-field="o.partner_id.phone"></span></div>
                                        <div class="col-3">NO EXT: </div>
                                        <div class="col-3">CONTACTO: <!--<span t-field="o.partner_id.name"></span>--></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="buyer">
                    <div class="container">
                        <div class="row" style="border-bottom: solid 1px;">
                            <div class="col-4" style="font-size:12px;">
                                <div>
                                    <div>
                                        COMPRADOR: <span t-field="o.user_id.partner_id.name"/>
                                    </div>
                                    <div>
                                        CONDICIONES: <span t-field="o.payment_term_id.name"/>,
                                    </div>
                                    <div>
                                        ALMACÉN <span t-field="o.company_id.partner_id.l10n_mx_edi_colony"/>,
                                    </div>
                                    <div>
                                        MEDIO DE ENVÍO: <span t-field="o.partner_id.city"/>, <span t-field="o.partner_id.state_id.name"/> <span t-field="o.company_id.partner_id.zip"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 offset-4 text-right" style="font-size:12px;">
                                <div>
                                    <div>
                                        <div>HORARIO DE RECIBO DE MERCANCIA</div>
                                        <div>Lunes a viernes 6:00 - 13:00 y 13:30 - 16:30</div>
                                       <div> Sabados 8:00 a 12:00p.m.</div>
                                       <div> *** DESPUES DE ESA HORA NO SE RECIBIRA MERCANCIA A PROVEEDORES ***</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </xpath>

            <xpath expr="//div[hasclass('page')]" position="attributes">
                <attribute name="style">font-size:12px</attribute>
            </xpath>

            <xpath expr="//div[@id='informations']" position="attributes">
                <attribute name="style">display:none;</attribute>
            </xpath>
            <xpath expr="//h2[1]" position="attributes">
                <attribute name="style">display:none;</attribute>
            </xpath>
            <xpath expr="//h2[2]" position="attributes">
                <attribute name="style">display:none;</attribute>
            </xpath>
            <xpath expr="//h2[3]" position="attributes">
                <attribute name="style">display:none;</attribute>
            </xpath>
            <xpath expr="//h2[4]" position="attributes">
                <attribute name="style">display:none;</attribute>
            </xpath>

            <xpath expr="//th[@name='th_description']/../.." position="before">
                <t t-set="line_count" t-value="(0)" />
            </xpath>
            <xpath expr="//th[@name='th_description']" position="before">
                <th name="th_custom_qty">
                    <strong>Cantidad</strong>
                </th>
            </xpath>
            <xpath expr="//td[@id='product']" position="before">
                <td id="custom_qty">
                    <span t-field="line.product_qty"></span>
                </td>
            </xpath>
            <xpath expr="//th[@name='th_custom_qty']" position="before">
                <th name="th_custom_count">
                    <strong>Lin.</strong>
                </th>
            </xpath>
            <xpath expr="//td[@id='custom_qty']" position="before">
                <t t-set="line_count" t-value="(line_count+1)" />
                <td id="custom_count">
                    <span t-esc="str(line_count).zfill(2)"></span>
                </td>
            </xpath>
            <xpath expr="//th[@name='th_description']" position="before">
                <th name="th_custom_uom">
                    <strong>Unidad</strong>
                </th>
                <th name="th_codigo">
                    <strong>Codigo</strong>
                </th>
                <th name="th_codigo_proveedor">
                    <strong>Codigo Prov.</strong>
                </th>
            </xpath>
            <xpath expr="//td[@id='product']" position="before">
                <td id="custom_uom">
                    <span t-field="line.product_uom.name"></span>
                </td>
                <td id="custom_codigo">
                    <span t-field="line.product_id.default_code"></span>
                </td>
                <td id="custom_cod_prov">
                    
                </td>
            </xpath>
            <xpath expr="//h2[contains(@t-if,'o.state')]" position="attributes">
                <attribute name="style">display:none;</attribute>
            </xpath>
            <xpath expr="//span[@groups='uom.group_uom']/.." position="attributes">
                <attribute name="style">display:none;</attribute>
            </xpath>
            <xpath expr="//th[@name='th_quantity']" position="attributes">
                <attribute name="style">display:none;</attribute>
            </xpath>
            <xpath expr="//div[@t-if='o.date_order']" position="attributes">
                <attribute name="style">display:none;</attribute>
            </xpath>
            <xpath expr="//p[@t-field='o.notes']" position="before">
            <br />
                <div class="row">
                    <div class="col-3 offset-3 text-center">
                        <div><span t-field="o.user_id.partner_id.name"></span> </div>
                        <div style="border-top:1px solid black;margin-right:5px">FORMULO</div>
                    </div>
                    <div class="col-3 text-center">
                        <t t-set="approval" t-value="o.get_approval()"/>
                        <div><span t-esc="approval"></span> </div>
                        <div style="border-top:1px solid black;margin-right:5px">AUTORIZO</div>
                    </div>
                    <div class="col-3"></div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>