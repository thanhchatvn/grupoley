<odoo>
  <data>
    <!-- Inherit Form View to Modify it -->
    <record id="mrp_production_form_consume_all" model="ir.ui.view">
        <field name="name">mrp.production.form.custom</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_mark_done'][2]" position="after">
              <button name="button_cosume_all" string="Consumir todo" type="object" attrs="{'invisible': [('state','in',('draft','done','cancel'))]}"/>
            </xpath>
        </field>
    </record>
  </data>
</odoo>