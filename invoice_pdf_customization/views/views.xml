                    <xpath expr="//t[@t-set='address']" position="replace">
                        <t t-set='address' ></t>
                    </xpath>

                    <xpath expr="//div[hasclass('page')]" position="before">
                        <t t-set="is_cfdi_signed" t-value="bool(o._get_l10n_mx_edi_signed_edi_document())"/>
                        <t t-set="cfdi_data" t-value="o._l10n_mx_edi_decode_cfdi()"/>

                        <section class="header-tables" t-if="invoice_client">
                            <div class="container">
                                <div class="row">
                                    <div class="col-7"></div>
                                    <div class="col-5">
                                        <div class="row">
                                            <div class="col-6 text-center" style="width:100%; border: solid 1px; border-radius:25px;">
                                                <div class="row">
                                                    <div class="col-auto">
                                                        <b><span>FACTURA</span></b>
                                                    </div>
                                                </div>
                                                <div class="row" style="border-top: solid 1px;">
                                                    <div class="col-auto">
                                                        <b><span t-field="o.invoice_origin"/></b>
                                                    </div>
                                                </div>
                                                <div class="row" style="border-top: solid 1px;">
                                                    <div class="col-auto">
                                                        <span>REFERENCIA:</span>
                                                    </div>
                                                </div>
                                                <div class="row" style="border-top: solid 1px;">
                                                    <div class="col-auto">
                                                        <span>123456789</span>
                                                    </div>
                                                </div>
                                                <div class="row" style="border-top: solid 1px; border-bottom: solid 1px;">
                                                    <div class="col-auto">
                                                        <span>FECHA</span>
                                                    </div>
                                                </div>
                                                <div class="row" style="border-top: solid 1px;">
                                                    <div class="col-auto">
                                                        <span t-field="o.invoice_date"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <t t-if="cfdi_data">
                                                <div class="col-6 text-center" style="margin-left:10px; width:100%; border: solid 1px; border-radius:25px;">
                                                    <div class="row">
                                                        <div class="col-auto">
                                                            <span class="pull-left">USO CFDI:</span> <b><span class="pull-right" t-esc="cfdi_data.get('usage')"></span></b>
                                                        </div>
                                                    </div>
                                                    <div class="row" style="border-top: solid 1px;">
                                                        <div class="col-auto">
                                                            <span t-field="o.l10n_mx_edi_usage"></span>
                                                        </div>
                                                    </div>
                                                    <div class="row" style="border-top: solid 1px;">
                                                        <div class="col-auto">
                                                            <span class="pull-left">Método de pago:</span> <span class="pull-right" t-esc="cfdi_data.get('payment_method')"></span>
                                                        </div>
                                                    </div>
                                                    <div class="row" style="border-top: solid 1px;">
                                                        <t t-set="payment_method_name" t-value="cfdi_data.get('payment_method')"></t>
                                                        <div class="col-auto">
                                                            <t t-if="payment_method_name == 'PPD'">
                                                                <span>PAGO EN PARCIALIDADES O DIFERIDO</span>
                                                            </t>
                                                            <t t-if="payment_method_name == 'PUE'">
                                                                <span>PAGO EN UNA SOLA EXHIBICIÓN</span>
                                                            </t>
                                                        </div>
                                                    </div>
                                                    <div class="row" style="border-top: solid 1px;">
                                                        <div class="col-auto">
                                                            <span class="pull-left">Forma de pago:</span> <span class="pull-right" t-esc="o.l10n_mx_edi_payment_method_id.code"></span>
                                                        </div>
                                                    </div>
                                                    <div class="row" style="border-top: solid 1px;">
                                                        <div class="col-auto">
                                                            <span t-esc="o.l10n_mx_edi_payment_method_id.name"></span>
                                                        </div>
                                                    </div>
                                                    <div class="row" style="border-top: solid 1px;">
                                                        <div class="col-auto">
                                                            Fecha y hora de certificación
                                                        </div>
                                                    </div>
                                                    <div class="row" style="border-top: solid 1px;">
                                                        <div class="col-auto">
                                                            <span t-esc="cfdi_data.get('stamp_date')"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <section class="addresses" t-if="invoice_client">
                            <div class="row">
                                <div class="col-6">
                                    <div class="text-center">DOMICILIO FISCAL</div>
                                    <div>
                                        <div>
                                            <span t-field="o.company_id.partner_id.name"/>,
                                        </div>
                                        <div>
                                            <span t-field="o.company_id.partner_id.street"/>,
                                        </div>
                                        <div>
                                            Col. <span t-field="o.company_id.partner_id.l10n_mx_edi_colony"/> <span t-field="o.company_id.partner_id.zip"/>,
                                        </div>
                                        <div>
                                            <span t-field="o.company_id.partner_id.city"/>, <span t-field="o.company_id.partner_id.state_id.name"/>, <span t-field="o.company_id.partner_id.country_id.name"/>,
                                        </div>
                                    </div>
                                    <br/>
                                    <div t-if="o.company_id.partner_id.vat">
                                        <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                                        <t t-else="">Tax ID</t>: <span t-field="o.company_id.partner_id.vat"/></div>
                                </div>
                                <br/>
                                <div class="col-6">
                                    <t t-set="warehouse_data" t-value="o.invoice_line_ids.mapped('sale_line_ids.order_id.warehouse_id')"></t>
                                    <t t-if="warehouse_data">
                                        <div class="text-center">DOMICILIO DE EXPEDICIÓN</div>
                                        <div>
                                            <div>
                                                <span t-field="warehouse_data[0].partner_id.name"/>,
                                            </div>
                                            <div>
                                                <span t-field="warehouse_data[0].partner_id.street"/>,
                                            </div>
                                            <div>
                                                Col. <span t-field="warehouse_data[0].partner_id.l10n_mx_edi_colony"/> <span t-field="warehouse_data[0].partner_id.zip"/>,
                                            </div>
                                            <div>
                                                <span t-field="warehouse_data[0].partner_id.city"/>, <span t-field="warehouse_data[0].partner_id.state_id.name"/>, <span t-field="warehouse_data[0].partner_id.country_id.name"/>,
                                            </div>
                                        </div>
                                        <br></br>
                                        <div t-if="warehouse_data[0].partner_id.vat">
                                            <t t-if="warehouse_data[0].company_id.country_id.vat_label" t-esc="warehouse_data[0].company_id.country_id.vat_label" id="inv_tax_id_label"/>
                                            <t t-else="">Tax ID</t>: <span t-field="warehouse_data[0].partner_id.vat"/></div>
                                    </t>
                                </div>
                            </div>
                        </section>
                    </xpath>

