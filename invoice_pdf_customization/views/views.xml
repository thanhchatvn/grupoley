        <template id="report_invoice_inherit" inherit_id="account.report_invoice_document">
            <xpath expr="//t[@t-value='o.with_context(lang=lang)']" position="after">
                <t t-set="invoice_client" t-value="o.is_invoice_client()"></t>
            </xpath>
