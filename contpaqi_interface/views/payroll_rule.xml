<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="payroll_rule_customization" model="ir.ui.view">
            <field name="name">payroll.rule.customization</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='not_computed_in_net']" position="after">
                    <field name="x_concept_type"/>
                    <field name="x_contpaq_department_id"/>
                    <field name="x_contpaq_series"/>
                    <field name="x_contpaq_bank"/>
                    <field name="company_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>