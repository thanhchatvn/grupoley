<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_company_database_form_view" model="ir.ui.view">
            <field name="name">res.company.database.form.view</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="after">
                    <field name="x_company_payroll_db"/>                 
                    <field name="x_payroll_series"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>