<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_internal_transfer_tree" model="ir.ui.view">
        <field name="name">stock.internal.transfer.tree</field>
        <field name="model">stock.internal.transfer</field>
        <field name="arch" type="xml">
            <tree string="Stock Internal Transfer" decoration-muted="state == 'cancel'">
                <field name="name"/>
                <field name="date"/>
                <field name="source_warehouse_id" groups="stock.group_stock_multi_warehouses"/>
                <field name="dest_warehouse_id" groups="stock.group_stock_multi_warehouses"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_stock_internal_transfer_filter" model="ir.ui.view">
        <field name="name">stock.internal.transfer.filter</field>
        <field name="model">stock.internal.transfer</field>
        <field name="arch" type="xml">
            <search string="Search Inventory">
                <field name="name" string="Inventory Reference"/>
                <field name="date"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Transfer" name="confirm" domain="[('state', '=', 'confirm')]"/>
                <filter string="Validated" name="done" domain="[('state', '=', 'done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="status" domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Inventories Date" name="inventories_month" domain="[]" context="{'group_by':'date'}" help="Physical Inventories by Date"/>
                </group>
            </search>

        </field>
    </record>

    <record id="view_stock_internal_transfer_form" model="ir.ui.view">
        <field name="name">stock.internal.transfer.form</field>
        <field name="model">stock.internal.transfer</field>
        <field name="arch" type="xml">
            <form string="Stock Internal Transfer">
            <header>
                <button name="action_start" states="draft" string="Start Transfer" type="object" class="oe_highlight" groups="stock.group_stock_user"/>
                <button name="%(internal_stock_transfer_app.act_stock_product_produce)d" states="confirm" string="Validate Stock" type="action" class="oe_highlight" groups="stock.group_stock_manager"/>
                <button name="action_draft" states="cancel" string="Set to Draft" type="object"/>
                <button name="action_cancel" states="confirm" string="Cancel Transfer" type="object"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button name="action_internal_transfer_move_tree"
                        class="oe_stat_button"
                        icon="fa-arrows-v"
                        type="object"
                        help="List view of operations">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_text">Operations</span>
                        </div>
                    </button>
                </div>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name" placeholder="e.g. Annual inventory"/></h1>
                </div>
                <group>
                    <group>
                        <field name="date"/>
                        <field name="source_warehouse_id" groups="stock.group_stock_multi_warehouses" options="{'no_create': True}" attrs="{'required':[('state','=','draft')]}" />
                        <field name="inventory_location_id" invisible="1"/>
                        <field name="location_id" groups="stock.group_stock_multi_locations" domain="[('id', 'child_of', inventory_location_id)]" options="{'no_create': True}" attrs="{'required':[('state','=','draft')]}" />
                    </group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" attrs="{'required':[('state','=','draft')]}" />
                        <field name="dest_warehouse_id" groups="stock.group_stock_multi_warehouses" options="{'no_create': True}"
                        attrs="{'required':[('state','=','draft')]}" />
                        <field name="inventory_location_dest_id" invisible="1"/>
                        <field name="location_dest_id" groups="stock.group_stock_multi_locations" domain="[('id', 'child_of', inventory_location_dest_id)]" options="{'no_create': True}" attrs="{'required':[('state','=','draft')]}" />
                    </group>
                </group>
                <notebook>
                    <page string="Transfer Products">
                        <field name="line_ids">
                            <tree editable="bottom">
                                <field name="product_id" required="1"/>
                                <field name="product_uom_id" options="{'no_open': True, 'no_create': True}" string="Unit of Measure" groups="uom.group_uom" required="1"/>
                                <field name="qty_available" readonly="1"/>
                                <field name="transfer_qty" required="1"/>
                                <field name="quantity_done" readonly="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Stock Move">
                        <field name="move_ids" readonly="1">
                            <tree editable="bottom" readonly="1">
                                <field name="date" groups="base.group_no_one"/>
                                <field name="reference"/>
                                <field name="picking_type_id" invisible="1"/>
                                <field name="create_date" invisible="1" groups="base.group_no_one"/>
                                <field name="product_id"/>
                                <field name="location_id" groups="stock.group_stock_multi_locations" string="From"/>
                                <field name="location_dest_id" groups="stock.group_stock_multi_locations" string="To"/>
                                <field name="product_uom_qty"/>
                                <field name="product_uom" options="{'no_open': True, 'no_create': True}" string="Unit of Measure" groups="uom.group_uom"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>

    <record id="action_stock_internal_transfer_form" model="ir.actions.act_window">
        <field name="name">Internal Transfer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.internal.transfer</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_stock_internal_transfer_tree"/>
        <field name="search_view_id" ref="view_stock_internal_transfer_filter"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new stock internal transfer
          </p><p>
            This is used to correct the product quantities you have in stock.
          </p>
        </field>
    </record>

    <menuitem id="menu_stock_internal_transfer_mgmt" name="Internal Stock Transfer" parent="stock.menu_stock_root" sequence="3"/>
    <menuitem action="action_stock_internal_transfer_form" id="menu_action_stock_internal_transfer_form" parent="menu_stock_internal_transfer_mgmt" sequence="30"/>
</odoo>
