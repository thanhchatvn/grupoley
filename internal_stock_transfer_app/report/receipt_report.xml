<?xml version="1.0"?>
<odoo>
	<record id="paperformat_transfer_receipt" model="report.paperformat">
        <field name="name">transfer.receipt</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">270</field>
        <field name="page_width">125</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

	<report
	    id="transfer_receipt_action"
	    model="stock.internal.transfer"
	    string="Internal Transfer Receipt"
	    report_type="qweb-pdf"
	    name="internal_stock_transfer_app.transfer_receipt"
	    file="internal_stock_transfer_app.transfer_receipt"
	    attachment_use="True"
        paperformat="paperformat_transfer_receipt"
	/>
</odoo>