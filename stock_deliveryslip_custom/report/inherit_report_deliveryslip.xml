<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id= "inherit_report_deliveryslip" inherit_id="stock.report_delivery_document">
         <xpath expr="//table[@class='table table-sm mt48']//thead//tr" position="replace">

                            <tr>
                                <th name="th_sm_product"><strong>Product</strong></th>
                                 <t name="lot_serial" t-if="has_serial_number">
                                    <th>
                                        Lot/Serial Number
                                    </th>
                                </t>
                                <th name="th_sm_quantity" style="padding-left: -10%; "><strong> Quantity</strong></th>
                            </tr>

         </xpath>
           <xpath expr="//table[@class='table table-sm']//thead//tr" position="replace">

                            <tr>
                                <th name="th_sm_product"><strong>Product</strong></th>
                                <th name="th_sm_quantity" style="padding-left: -10%; "><strong> Quantity</strong></th>
                            </tr>

         </xpath>
         <xpath expr="//tbody//tr//td/span[@t-field='bo_line.product_uom_qty']" position="replace">

                                 <td>
                                            <span style="padding-left: -10%;" t-field="bo_line.product_uom_qty"/>
                                            <span t-field="bo_line.product_uom"/>
                                 </td>
         </xpath>
         <xpath expr="//table[@class='table table-sm mt48']//tbody//tr" position="replace">
              <tr t-foreach="o.move_line_ids" t-as="move_line">
                                         <td>
            <span t-field="move_line.product_id"/>
            <!-- this is an annoying workaround for the multiple types of descriptions (often auto-filled) that we do not want to print -->
            <!-- this makes it so we can pre-filter the descriptions in inherited templates since we cannot extend the standard "if" condition -->
            <!-- let's agree that pre-filtered descriptions will be set to "" -->
            <t t-if="not description and description != ''">
                <t t-set="description" t-value="move_line.move_id.description_picking"/>
            </t>
            <p t-if="description !='' and description != move_line.product_id.name">
                <span t-esc="description"/>
            </p>
        </td>
        <t t-if="has_serial_number" name="move_line_lot">
            <td style="padding-left: -3%;"><span t-field="move_line.lot_id.name"/></td>
        </t>
           <td class="text-left" name="move_line_lot_qty_done" style="padding-left: -10%;" >
                     <span style="padding-left: -10%;" t-field="move_line.qty_done"/>
                    <span  t-field="move_line.product_uom_id"/>
           </td>
              </tr>

        </xpath>

    </template>

</odoo>
