<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="prueba.list">
      <field name="name">prueba list</field>
      <field name="model">prueba.server</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="prueba.action_window">
      <field name="name">prueba window</field>
      <field name="res_model">prueba.server</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="server.action_server">
      <field name="name">prueba server</field>
      <field name="model_id" ref="model_prueba_prueba"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="prueba" id="server.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="server.menu_1" parent="prueba.menu_root"/>
    <menuitem name="Menu 2" id="server.menu_2" parent="prueba.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="server.menu_1_list" parent="prueba.menu_1"
              action="server.action_window"/>
    <menuitem name="Server to list" id="server" parent="prueba.menu_2"
              action="server.action_server"/>

  </data>
</odoo>