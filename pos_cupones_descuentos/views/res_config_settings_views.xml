<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_view_form_inherit_pos_cupones_descuentos" model="ir.ui.view">
        <field name="name">res.config.form.inherit.pos.coupon</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pricing_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div style="font-weight: bold;">
                            Cupones y promociones
                        </div>
                        <div class="text-muted">
                            Administre los programas de cupones y promociones
                        </div>
                        <div class="mt8">
                            <button name="%(coupon.coupon_program_action_promo_program)d" icon="fa-arrow-right" type="action" string="Programa de promociones" class="btn-link"/>
                        </div>
                        <div class="mt8">
                            <button name="%(coupon.coupon_program_action_coupon_program)d" icon="fa-arrow-right" type="action" string="Programa de cupones" class="btn-link"/>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
