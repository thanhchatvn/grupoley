<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="product_template_only_form_view_inherit_pos_cupones_descuentos" model="ir.ui.view">
        <field name="name">product.template.only.form.view.inherit.pos.cupones.descuentos</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="desc_pos" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="product_normal_form_view_inherit_pos_cupones_descuentos" model="ir.ui.view">
        <field name="name">product.normal.form.view.inherit.pos.cupones.descuentos</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="desc_pos" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>