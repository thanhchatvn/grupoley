<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="pos_config_view_form_inherit_pos_cantidad_stock" model="ir.ui.view">
        <field name="name">pos.config.view.form.inherit.pos.cantidad.stock</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='inventory_location']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="default_location_src_id" string="Ubicación"/>
                        <div class="text-muted">
                            Seleccione la ubicación de almacén que se usará para definir la cantidad<br/>
                            de stock de los productos dentro de este punto de venta.
                        </div>
                        <div class="content-group mt16">
                            <field name="default_location_src_id" required="1" domain="[('company_id', '=', company_id)]"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
