<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_user_is_comercial_form" model="ir.ui.view">
            <field name="name">res.user.is.comercial.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='messaging']" position="after">
                    <group string="Ventas">
                        <field name="x_comercial"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>