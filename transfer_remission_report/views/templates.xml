        <template id="report_picking_remission" >
             <t t-call="web.html_container">
                 <t t-call="web.external_layout">
                     <t t-foreach="docs" t-as="o">
                        <t t-set="lang" t-value="o.user_id.sudo().lang if o.user_id else o.partner_id.lang"/>
                        <div class="page">
                             <section class="addresses">
                                <div class="row">
                                    <div class="col-6">
                                        <t t-set="warehouse_data" t-value="o.move_ids_without_package.mapped('warehouse_id')"></t>
                                        <t t-if="warehouse_data">
    <!--                                        <div class="text-center">DOMICILIO DE EXPEDICIÓN</div>-->
                                            <div>
                                                <div>
                                                    <span t-field="warehouse_data[0].partner_id.name"/>,
                                                </div>
                                                <div>
                                                    <span t-field="warehouse_data[0].partner_id.street"/>,
                                                </div>
                                                <div>
                                                    Col. <span t-field="warehouse_data[0].partner_id.l10n_mx_edi_colony"/> <span t-field="warehouse_data[0].partner_id.zip"/>,
                                                </div>
                                                <div>
                                                    <span t-field="warehouse_data[0].partner_id.city"/>, <span t-field="warehouse_data[0].partner_id.state_id.name"/>, <span t-field="warehouse_data[0].partner_id.country_id.name"/>,
                                                </div>
                                            </div>
                                            <br></br>
                                            <div t-if="warehouse_data[0].partner_id.vat">
                                                <t t-if="warehouse_data[0].company_id.country_id.vat_label" t-esc="warehouse_data[0].company_id.country_id.vat_label" id="inv_tax_id_label"/>
                                                <t t-else="">Tax ID</t>: <span t-field="warehouse_data[0].partner_id.vat"/></div>
                                        </t>
                                    </div>
                                    <br />
                                    <div class="col-6 text-right" style="font-size:24px;">
                                        <!--<div class="text-center">DOMICILIO FISCAL</div>
                                        <div>
                                            <div>
                                                <span t-field="o.company_id.partner_id.name"/>,
                                            </div>
                                            <div>
                                                <span t-field="o.company_id.partner_id.street"/>,
                                            </div>
                                            <div>
                                                Col. <span t-field="o.company_id.partner_id.l10n_mx_edi_colony"/> <span t-field="o.company_id.partner_id.zip"/>,
                                            </div>
                                            <div>
                                                <span t-field="o.company_id.partner_id.city"/>, <span t-field="o.company_id.partner_id.state_id.name"/>, <span t-field="o.company_id.partner_id.country_id.name"/>,
                                            </div>
                                        </div>
                                        <br/>
                                        <div t-if="o.company_id.partner_id.vat">
                                            <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                                            <t t-else="">Tax ID</t>: <span t-field="o.company_id.partner_id.vat"/></div>-->

                                        <div style="font-size:30px;">
                                            <strong>REMISION <span t-field="o.name"></span></strong>
                                        </div>
                                        <div>
                                            <strong>Fecha Remision <span t-field="o.date_done"></span></strong>
                                        </div>
                                        <div>
                                            <strong>Pedido <span t-field="o.sale_id.name" t-if="o.sale_id"></span></strong>
                                        </div>
                                        <div>
                                            <span>Fecha hora de impresion</span>
                                            <div>
                                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M:%S')"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                             <section class="order_data">
                        <table style="width: 100%">
                            <tbody>
                                <tr>
                                    <td style="padding: 5px; width:50%;">
                                        <div style="border: 1px solid; display: grid; grid-gap: 5px;height: 200px; width: 100%; padding: 10px;">
                                            <div>VENDIDO A:</div>
                                            <div>
                                                <div>
                                                    <span t-field="o.sale_id.partner_id.name"/>,
                                                </div>
                                                <div>
                                                    <span t-field="o.sale_id.partner_id.street"/>,
                                                </div>
                                                <div>
                                                    Col. <span t-field="o.sale_id.partner_id.l10n_mx_edi_colony"/> <span t-field="o.sale_id.partner_id.zip"/>,
                                                </div>
                                                <div>
                                                    <span t-field="o.sale_id.partner_id.city"/>, <span t-field="o.sale_id.partner_id.state_id.name"/>, <span t-field="o.sale_id.partner_id.country_id.name"/>,
                                                </div>
                                            </div>
                                            <span t-if="o.sale_id.partner_id.vat">
                                                <t t-if="o.sale_id.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label">R.F.C </t>
                                                <t t-else="">Tax ID</t>: <span t-field="o.sale_id.partner_id.vat"/></span>
                                            <!--</span>-->
                                        </div>
                                    </td>
                                    <td style="padding: 5px; width:50%;">
                                        <div style="border: 1px solid; display: grid; grid-gap: 5px;height: 200px; width: 100%; padding: 10px; display: grid;">
                                            <div>ENVIAR A:</div>
                                            <div>
                                                <div>
                                                    <span t-field="o.sale_id.partner_shipping_id.name"/>,
                                                </div>
                                                <div>
                                                    <span t-field="o.sale_id.partner_shipping_id.street"/>,
                                                </div>
                                                <div>
                                                    Col. <span t-field="o.sale_id.partner_shipping_id.l10n_mx_edi_colony"/> <span t-field="o.sale_id.partner_shipping_id.zip"/>,
                                                </div>
                                                <div>
                                                    <span t-field="o.sale_id.partner_shipping_id.city"/>, <span t-field="o.sale_id.partner_shipping_id.state_id.name"/>, <span t-field="o.sale_id.partner_shipping_id.country_id.name"/>,
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                     <td style="padding: 5px; width:50%;">
                                       <!-- <div style="border: 1px solid; display: grid; grid-gap: 5px;height: 100px; width: 100%; padding: 10px;">
                                            <div>REMISIÓN(ES):</div><br/>
                                            <span>#ORDEN: <span t-field="o.sale_id"/></span>
                                        </div>-->
                                          <div  style="border: 1px solid; display: grid; grid-gap: 5px;height: 70px; width: 100%; padding: 10px;">
                                            <div>DÍAS DE CRÉDITO:</div><br/>
                                            <span t-if="o.sale_id.payment_term_id">crédito <span t-field="o.sale_id.payment_term_id"/></span>
                                        </div>
                                    </td>
                                    <td style="padding: 5px; width:50%;">

                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px; width:50%;">
                                       <!-- <div style="border: 1px solid; display: grid; grid-gap: 5px;height: 50px; width: 100%; padding: 10px;">
                                            <div>OC: <span>XXX</span></div>
                                        </div>-->
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!--_________________________________________________________________________-->
                        <!--No eliminar div, esto acomoda el contenido del reporte de tal forma que se vea bien la descripcion-->
                        <div class="row" style="margin-top: 2px">
                            <div class="col-md-6"><div><div></div><br/><span></span></div></div>
                            <div class="col-md-6"><div></div></div>
                        </div>
                        <!--_________________________________________________________________________-->
                    </section>


                         <!-- detalles -->
                         <br/>
                <t t-set="sale_line_calculated_values" t-value="o.calculate_remission_details()"></t>
                         <t t-set="sale_values" t-value="o.sale_id"></t>
                <table class="table table-xsm o_main_table" style="font-size: 14px" name="invoice_line_table">
                    <thead>
                        <tr class="text-center">
                            <th name="th_quantity"><span>CANT.</span></th>
                            <th name="th_uom"><span>UM</span></th>
                            <th name="th_barcode"><span>CODIGO</span></th>
                            <th name="th_clv_uni"><span>CLV UNI</span></th>
                            <th name="th_clv_prod_serv"><span>CLV PROD SERV</span></th>
                            <th name="th_description"><span>DESCRIPCIÓN</span></th>
                            <th name="th_default_code"><span>CODE</span></th>
                            <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>PRECIO</span></th>
                            <th name="th_price_unit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>DESCUENTO</span>
                            </th>
                            <th name="th_price_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>DESC PROM</span>
                            </th>
                            <th name="th_subtotal" class="text-right">
                                <span groups="account.group_show_line_subtotals_tax_excluded">IMPORTE</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <!--<t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.move_name, -l.id), reverse=True)"/>-->
                        <t t-set="lines" t-value="[x['line_original'] for x in sale_line_calculated_values.values()]"/>

                        <t t-foreach="lines" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <td class="text-center">
                                        <span t-esc="sale_line_calculated_values[line.id]['line_qty']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.product_uom"  groups="uom.group_uom"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.product_id.barcode"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line.product_uom.unspsc_code_id.code"></span>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line.product_id.unspsc_code_id.code"></span>
                                    </td>
                                    <td class="text-center" name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                    <td class="text-center">
                                        <span t-field="line.product_id.default_code"/>
                                    </td>
                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap" t-field="line.price_unit"/>
                                    </td>
                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <t t-esc="sale_line_calculated_values[line.id]['discount_amount_price_list']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: sale_values.currency_id}"></t>
                                    </td>
                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap">
                                            <t t-esc="sale_line_calculated_values[line.id]['discount_amount']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: sale_values.currency_id}"></t>
                                        </span>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap">
                                            <t t-esc="sale_line_calculated_values[line.id]['total_wo_discount']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: sale_values.currency_id}"></t>
                                        </span>
                                    </td>
                                </t>

                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                            </tr>

                            <!--<t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>-->
                        </t>
                    </tbody>
                </table>
                    </t>
                 </t>

            </t>
        </template>
    </data>
</odoo>