<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="pos_config_view_form_inherit_restaurant_inherit_pos_lista_precio" model="ir.ui.view">
        <field name="name">pos.config.view.form.inherit.restaurant.inherit.pos.lista.precio</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="pos_restaurant.pos_config_view_form_inherit_restaurant"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='iface_printbill']" position="replace">
                <div class="col-12 col-lg-6 o_setting_box"
                     id="iface_printbill">
                    <div class="o_setting_left_pane">
                        <field name="iface_printbill"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="iface_printbill"/>
                        <div class="text-muted">
                            Permitir imprimr la factura antes del pago.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>