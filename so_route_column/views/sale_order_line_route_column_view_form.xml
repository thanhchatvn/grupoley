<odoo>
    <data>
        <record model="ir.ui.view" id="so_line_route_column">
            <field name="name">Sale Order Line route column</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="route_domain_ids" attrs="{'column_invisible': [True]}"/>
                    <field name="product_route_id" domain="[('id','in',route_domain_ids)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>